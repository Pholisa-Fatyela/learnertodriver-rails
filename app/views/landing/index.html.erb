<% if current_user %>

  <div class="landing gapped content">

    <div class="centered-message">

      <h1>Landing logged in</h1>
      <p>Dashboard about recent quizzes</p>
      
      <h2>Posts:</h2>
        <% if current_user.posts %>
          <p><%= current_user.posts.count %></p>
        <% else %>
        <p>No posts yet</p>
        <% end %>
    </div>
  </div>

<% else %>

  <%= render 'landing/components/hero' %>
  <%= render 'landing/components/card' %>
  <%= render 'landing/components/testimonials' %>

<% end %>